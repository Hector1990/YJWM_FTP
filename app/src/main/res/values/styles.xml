<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#88B5EA</item>
        <item name="colorPrimaryDark">#7CA7D9</item>
        <item name="colorAccent">@color/login_button</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FileTitleStyle">
        <item name="android:textColor">@color/file_title_color</item>
        <item name="android:textSize">@dimen/file_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FileSizeStyle">
        <item name="android:textColor">@color/file_size_color</item>
        <item name="android:textSize">@dimen/file_size_size</item>
    </style>

    <style name="FileTimeStyle">
        <item name="android:textColor">@color/file_time_color</item>
        <item name="android:textSize">@dimen/file_time_size</item>
    </style>

    <style name="DialogButtonTextStyle">
        <item name="android:textColor">@color/dialog_button_color</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/dialog_button_min_width</item>
        <item name="android:paddingLeft">@dimen/components_low_margin</item>
        <item name="android:paddingRight">@dimen/components_low_margin</item>
    </style>

</resources>
