<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_two_line_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/components_normal_margin"
    android:paddingRight="@dimen/components_normal_margin">

    <ImageView
        android:id="@+id/file_icon_iv"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/tag_file" />

    <LinearLayout
        android:id="@+id/file_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/components_low_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_title_tv"
            style="@style/FileTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:id="@+id/file_size_tv"
            style="@style/FileSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_low_margin"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/file_time_tv"
        style="@style/FileTimeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/components_low_margin" />

</LinearLayout>